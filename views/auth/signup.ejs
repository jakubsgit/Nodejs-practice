<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.js') %>
</head>

<body>
    <%- include('../includes/navigation.js') %>
    </header>

    <main>
        <h3>The SignUp page</h3>

        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="title">Name</label>
                <input type="name" name="name" id="name">
            </div>
            <div class="form-control">
                <label for="imageUrl">Email</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="form-control">
                <label for="description">Password</label>
                <input type="password" id="password" name="password" minlength="8" />
            </div>
            <div class="form-control">
                <label for="description">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" minlength="8" />
            </div>
            <button class="btn" type="submit">SignUp</button>
        </form>
    </main>
    <script src="/js/main.js"></script>
</body>