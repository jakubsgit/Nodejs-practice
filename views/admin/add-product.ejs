<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.js') %>
</head>

<body>
    <%- include('../includes/navigation.js') %>
    </header>

    <main>
        <% if (errorText.length > 0) { %>
        <h3><%= errorText %> </h3>
        <% } %>
        <form class="product-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= input.title %>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image url</label>
                <input type="text" name="image" id="image">
            </div> -->
            <div class="form-control">
                <label for="imageUrl">Image url</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description"><%= input.description %></textarea>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= input.price %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"></input>
            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
    <script src="/js/main.js"></script>
</body>

</html>